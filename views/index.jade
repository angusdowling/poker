extends layout

mixin hero
  section(class="hero")
    div(class="wrapper")
      div(class="vertical-center")
        div(class="content")
          h1(class="h3") Money won is twice as sweet as money earned

          ul(class="actions")
            if (!user)
              li(class="item")
                a(href="/user/register" class="button link") Register
              li(class="item")
                a(href="/user/login" class="button link") Sign in

mixin blog
  section(class="blog")
    div(class="wrapper")
      div(class="header")
        h1 Recent News
      div(class="grid")
        div(class="row")
          div(class="column all-4")
            article(class="blog-post featured")
              div(class="blog-image")
                  img(src="../images/placeholder/blog-1.jpg")
              div(class="blog-content")
                span(class="type") Post / 
                  a(href="#") Event
                h2(class="h4")
                  a(href="#") September Madness
                span(class="date") September 1st, 2016
                p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis interdum velit sed enim volutpat ullamcorper. Nam sed...
                div(class="read-more")
                  a(href="#") Read more >>>

          div(class="column all-8")
            div(class="grid")
              div(class="row")
                div(class="column all-6")
                  article(class="blog-post big")
                    div(class="blog-image")
                        img(src="../images/placeholder/blog-2.jpg")
                    div(class="blog-content")
                      span(class="type") Post / 
                        a(href="#") News
                      h2(class="h4")
                        a(href="#") James “BAD BOY” Mittani loses nyx in landmark poker game
                      span(class="date") September 1st, 2016

                div(class="column all-6")
                  article(class="blog-post big")
                    div(class="blog-image")
                        img(src="../images/placeholder/blog-3.jpg")
                    div(class="blog-content")
                      span(class="type") Post / 
                        a(href="#") News
                      h2(class="h4")
                        a(href="#") Pulse activated nexus invulnerability
                      span(class="date") September 1st, 2016
              
              div(class="row")
                div(class="column all-4")
                  article(class="blog-post small")
                    div(class="blog-image")
                        img(src="../images/placeholder/blog-4.jpg")
                    div(class="blog-content")
                      span(class="type") Post / 
                        a(href="#") News
                      h2(class="h4")
                        a(href="#") Future of poker

                div(class="column all-4")
                  article(class="blog-post small")
                    div(class="blog-image")
                        img(src="../images/placeholder/blog-5.jpg")
                    div(class="blog-content")
                      span(class="type") Post / 
                        a(href="#") News
                      h2(class="h4")
                        a(href="#") Future of poker

                div(class="column all-4")
                  article(class="blog-post small")
                    div(class="blog-image")
                        img(src="../images/placeholder/blog-6.jpg")
                    div(class="blog-content")
                      span(class="type") Post / 
                        a(href="#") News
                      h2(class="h4")
                        a(href="#") Future of poker

mixin newsletter
  section(class="newsletter")
    div(class="wrapper")
      div(class="vertical-center")
        div(class="content")
          div(class="header")
            h1 Get updates for future tournaments &amp; events
          div(class="content")
            form(class="newsletter-form")
              input(type="text" placeholder="enter your email address")
              input(type="submit" value="Sign up")


block content
  
  +hero
  +blog
  +newsletter
  