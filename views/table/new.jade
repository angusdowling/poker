extends ../layout

block content
  .container
    h1 Add new Table
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/new/table",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="name", placeholder='Table Name')
      .form-group
        input.form-control(type='text', name="seats", placeholder='Number of Seats')
      .form-group
        input.form-control(type='text', name="buyin", placeholder='Buyin')
      .form-group
        input.form-control(type='text', name="sblind", placeholder='Small Blind')
      .form-group
        input.form-control(type='text', name="bblind", placeholder='Big Blind')
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel